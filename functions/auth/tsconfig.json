{
  "compilerOptions": {
    "lib": ["ES7"],
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "sourceRoot": "src",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    ".serverless/**/*",
    "./**/__tests__/*",
    "./**/.serverless/**/*",
    "./**/.webpack/**/*"
  ]
}
